{
  "name": "thinkific-api",
  "version": "0.0.0",
  "description": "Thinkific API javascript wrapper",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "keywords": [
    "thinkific",
    "api",
    "rest",
    "wrapper",
    "javascript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mwebler/thinkific-api"
  },
  "scripts": {
    "audit": "nsp check package",
    "build": "babel -d ./ ./src",
    "check": "npm run audit && npm outdated --depth 0",
    "coverage": "nyc --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "test": "ava",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate && npm run check",
    "pp": "npm run prepare",
    "major": "pmm major",
    "minor": "pmm minor",
    "patch": "pmm patch"
  },
  "author": {
    "name": "Matheus Webler",
    "email": "matheus.webler@gmail.com",
    "url": "https://github.com/mwebler"
  },
  "pre-commit": [
    "validate"
  ],
  "dependencies": {
    "bluebird": "^3.5.0",
    "check-types": "^7.1.5",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "url-join": "^2.0.2"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-function-bind": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^4.1.1",
    "nsp": "^2.2.0",
    "nyc": "^11.0.3",
    "pmm": "^1.3.0",
    "pre-commit": "^1.1.2"
  },
  "ava": {
    "files": [
      "test/*.js",
      "!test/test-helper.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
